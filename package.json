    "url": "https://github.com/ntrinquier/sms-gateway-nodejs/issues"
  },
  "homepage": "https://github.com/ntrinquier/sms-gateway-nodejs#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "eslint": "^3.4.0"
  },
  "dependencies": {
    "request": "^2.74.0"
