{
  "name": "sms-gateway-nodejs",
  "version": "0.0.1",
  "description": "A library to interact with SMS Gateway API.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src",
    "test": "echo \"No test specified yet\" && exit 0",
